{
	"name": "@radium/source",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"// prepare": "lefthook install -c config/lefthook.yml",
		"// ============ Development ============": "",
		"dev": "echo 'Run specific app: bun run dev:desktop | dev:cli | dev:tui | dev:server'",
		"dev:desktop": "cd apps/desktop && bun run dev",
		"dev:cli": "cargo run --bin radium-cli",
		"dev:tui": "cargo run --bin radium-tui",
		"dev:server": "cargo run --bin radium-core",
		"dev:mobile": "cd apps/mobile && bun run dev",
		"dev:website": "cd website && bun run start",
		"// ============ Build ============": "",
		"build": "nx run-many -t build",
		"build:all": "bun run build:rust && bun run build:desktop && bun run build:packages",
		"build:rust": "cargo build --release --all",
		"build:desktop": "cd apps/desktop && bun run build",
		"build:cli": "cargo build --release --bin radium-cli",
		"build:tui": "cargo build --release --bin radium-tui",
		"build:server": "cargo build --release --bin radium-core",
		"build:website": "cd website && bun run build",
		"build:packages": "nx run-many -t build --projects=tag:scope:shared",
		"// ============ Quick Shortcuts ============": "",
		"desktop": "bun run dev:desktop",
		"cli": "bun run dev:cli",
		"tui": "bun run dev:tui",
		"server": "bun run dev:server",
		"mobile": "bun run dev:mobile",
		"website": "bun run dev:website",
		"// ============ Testing ============": "",
		"test": "nx run-many -t test",
		"test:packages": "nx run-many -t test --projects=tag:scope:shared",
		"test:desktop:e2e": "playwright test --project=desktop --config=apps/desktop/playwright.config.ts",
		"test:rust": "cargo test --all",
		"// ============ Code Quality ============": "",
		"lint": "nx run-many -t lint",
		"lint:fix": "cargo clippy --fix --allow-dirty --allow-staged",
		"fmt": "cargo fmt --all",
		"fmt:check": "cargo fmt --all -- --check",
		"type-check": "nx run-many -t type-check --projects=tag:type:lib,tag:type:app",
		"deny": "cargo deny check --config config/deny.toml",
		"audit": "cargo audit"
	},
	"private": true,
	"dependencies": {
		"@improbable-eng/grpc-web": "^0.15.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@vitejs/plugin-react": "^5.1.1",
		"jsdom": "^27.2.0",
		"vitest": "^4.0.14",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@monodon/rust": "^2.3.0",
		"@nx/js": "22.1.3",
		"@nx/next": "22.2.1",
		"@nx/react": "22.1.3",
		"@nx/workspace": "22.1.3",
		"@playwright/test": "^1.57.0",
		"@types/node": "^20.0.0",
		"lefthook": "^1.8.4",
		"next": "^16.0.10",
		"nx": "22.2.1",
		"typescript": "^5.3.0"
	},
	"overrides": {
		"next": ">=16.0.7"
	}
}
