{
	"name": "@radium/source",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"prepare": "lefthook install -c config/lefthook.yml",
		"lint": "nx run-many -t lint",
		"lint:fix": "cargo clippy --fix --allow-dirty --allow-staged",
		"fmt": "cargo fmt --all",
		"fmt:check": "cargo fmt --all -- --check",
		"test": "nx run-many -t test",
		"test:packages": "nx run-many -t test --projects=tag:scope:shared",
		"build": "nx run-many -t build",
		"build:packages": "nx run-many -t build --projects=tag:scope:shared",
		"type-check": "nx run-many -t type-check --projects=tag:type:lib,tag:type:app",
		"deny": "cargo deny check --config config/deny.toml",
		"audit": "cargo audit",
		"server": "cargo run --bin radium-core",
		"cli": "cargo run --bin radium-cli",
		"tui": "cargo run --bin radium-tui",
		"desktop": "cd apps/desktop && bun run dev",
		"build:rust": "cargo build --all"
	},
	"private": true,
	"dependencies": {
		"@improbable-eng/grpc-web": "^0.15.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@vitejs/plugin-react": "^5.1.1",
		"jsdom": "^27.2.0",
		"vitest": "^4.0.14",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@monodon/rust": "^2.3.0",
		"@nx/js": "22.1.3",
		"@nx/react": "22.1.3",
		"@nx/next": "22.1.3",
		"@nx/workspace": "22.1.3",
		"@types/node": "^20.0.0",
		"lefthook": "^1.8.4",
		"nx": "22.1.3",
		"typescript": "^5.3.0"
	}
}
